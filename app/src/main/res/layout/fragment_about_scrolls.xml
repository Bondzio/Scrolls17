<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@color/white">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:descendantFocusability="blocksDescendants"

        android:orientation="vertical">
        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline10"
            app:layout_constraintGuide_percent="0.0"
            android:orientation="vertical"
            card_view:layout_editor_absoluteY="56dp"
            card_view:layout_editor_absoluteX="0dp" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline12"
            app:layout_constraintGuide_percent="1.0"
            android:orientation="vertical"
            card_view:layout_editor_absoluteY="56dp"
            card_view:layout_editor_absoluteX="360dp" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline13"
            app:layout_constraintGuide_percent="0.0"
            android:orientation="horizontal"
            card_view:layout_editor_absoluteY="56dp"
            card_view:layout_editor_absoluteX="0dp" />
        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline16"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="horizontal"
            card_view:layout_editor_absoluteY="324dp"
            card_view:layout_editor_absoluteX="0dp" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline14"
            app:layout_constraintGuide_percent="1.0"
            android:orientation="horizontal"
            card_view:layout_editor_absoluteY="592dp"
            card_view:layout_editor_absoluteX="0dp" />

        <WebView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/webView"
            app:layout_constraintLeft_toLeftOf="@+id/guideline10"
            app:layout_constraintTop_toTopOf="@+id/guideline13"
            app:layout_constraintBottom_toTopOf="@+id/guideline16"

            app:layout_constraintRight_toLeftOf="@+id/guideline12" />


        <WebView
            android:id="@+id/about_scrolls_web_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:isScrollContainer="true"
            app:layout_constraintLeft_toLeftOf="@+id/guideline10"
            app:layout_constraintRight_toLeftOf="@+id/guideline12"
            app:layout_constraintTop_toTopOf="@id/guideline16"
            app:layout_constraintBottom_toTopOf="@id/guideline14"
            android:padding="15dp"
            card_view:layout_editor_absoluteY="8dp"
            card_view:layout_editor_absoluteX="8dp" />


        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/html"
            />-->
    </android.support.constraint.ConstraintLayout>

</LinearLayout>


