<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="10dp"
            android:layout_marginTop="70dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wb"
                android:layout_centerHorizontal="true"

                android:gravity="center">

                <TextView
                    android:id="@+id/tvCollegeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Ajay Kumar Garg Engineering College"
                    android:textColor="@color/bg_dark_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCollegeName"
                    android:layout_centerHorizontal="true"

                    android:gravity="center"
                    android:text="Scrolls 2016"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvAppName"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="in Association with GMA"
                    android:textColor="@color/bg_dark_gray"
                    android:textSize="12sp" />
            </RelativeLayout>
            <com.schibsted.spain.parallaxlayerlayout.ParallaxLayerLayout
                android:layout_width="match_parent"
                android:id="@+id/parallaxLayer"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="150dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="300dp"
                    android:scaleType="centerInside"
                    android:foregroundGravity="bottom"
                    android:src="@drawable/podium"
                    android:layout_gravity="end"
                    app:layout_parallaxZIndex="5"

                    />
            </com.schibsted.spain.parallaxlayerlayout.ParallaxLayerLayout>
        </RelativeLayout>

        <WebView
            android:id="@+id/about_scrolls_web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:isScrollContainer="true" />

    </LinearLayout>
</ScrollView>

