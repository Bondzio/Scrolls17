<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggraynew"
    android:orientation="vertical">
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        app:layout_constraintGuide_percent="0.0"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline6"
        app:layout_constraintGuide_percent="1.0"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="320dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline7"
        app:layout_constraintGuide_percent="0.0"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline8"
        app:layout_constraintGuide_percent="0.3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="143dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline9"
        app:layout_constraintGuide_percent="1.0"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="477dp"
        tools:layout_editor_absoluteX="0dp" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#E5E5E5"
            app:layout_constraintLeft_toLeftOf="@+id/guideline5"
            app:layout_constraintRight_toLeftOf="@+id/guideline6"
            app:layout_constraintTop_toTopOf="@+id/guideline7"
            app:layout_constraintBottom_toTopOf="@+id/guideline8"


            >
            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline91"
                app:layout_constraintGuide_percent="0.2"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="56dp"
                tools:layout_editor_absoluteX="64dp" />
            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline81"
                app:layout_constraintGuide_percent="0.3"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="99dp"
                tools:layout_editor_absoluteX="0dp" />
            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline99"
                app:layout_constraintGuide_percent="0"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="56dp"
                tools:layout_editor_absoluteX="87dp" />

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline92"
                app:layout_constraintGuide_percent="0.27"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="56dp"
                tools:layout_editor_absoluteX="87dp" />
            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline93"
                app:layout_constraintGuide_percent="0.15"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="56dp"
                tools:layout_editor_absoluteX="48dp" />
            <com.schibsted.spain.parallaxlayerlayout.ParallaxLayerLayout
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/guideline99"
                app:layout_constraintTop_toTopOf="@id/guideline81"
                android:id="@+id/parallaxLayer"
                >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               >
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/yellowbar"
                   android:layout_marginTop="45dp"
                   android:layout_marginLeft="45dp"/>

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                  android:layout_marginTop="30dp"
                   android:src="@drawable/r"
                   android:id="@+id/imageView"

                   android:layout_marginLeft="35dp"
                   android:layout_marginStart="35dp" />
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="45dp"
                   android:src="@drawable/rarf"
                   android:layout_marginLeft="45dp"/>



           </RelativeLayout>


            </com.schibsted.spain.parallaxlayerlayout.ParallaxLayerLayout>
            </android.support.constraint.ConstraintLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/rv"

            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintLeft_toLeftOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/guideline8"

            app:layout_constraintRight_toLeftOf="@+id/guideline6" />


    </android.support.constraint.ConstraintLayout>


