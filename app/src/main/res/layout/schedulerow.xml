<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:hardwareAccelerated="true"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center_vertical">
        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline10"
            app:layout_constraintGuide_percent="0"
            android:orientation="vertical"

            tools:layout_editor_absoluteY="68dp"
            tools:layout_editor_absoluteX="17dp" />
        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline20"
            app:layout_constraintGuide_percent="0.3"
            android:orientation="vertical"

            tools:layout_editor_absoluteY="68dp"
            tools:layout_editor_absoluteX="17dp" />
        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline21"
            app:layout_constraintGuide_percent="0.6"
            android:orientation="vertical"

            tools:layout_editor_absoluteY="68dp"
            tools:layout_editor_absoluteX="17dp" />


        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline12"
            app:layout_constraintGuide_percent="1"
            android:orientation="vertical"

            tools:layout_editor_absoluteY="68dp"
            tools:layout_editor_absoluteX="357dp" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline13"
            app:layout_constraintGuide_percent="0"
            android:orientation="horizontal"

            tools:layout_editor_absoluteY="68dp"
            tools:layout_editor_absoluteX="17dp" />
        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline19"
            app:layout_constraintGuide_percent="0.3"
            android:orientation="horizontal"

            tools:layout_editor_absoluteY="68dp"
            tools:layout_editor_absoluteX="17dp" />
        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline16"
            app:layout_constraintGuide_percent="0.3"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="87dp"
            tools:layout_editor_absoluteX="17dp" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline14"
            app:layout_constraintGuide_percent="1"
            android:orientation="horizontal"

            tools:layout_editor_absoluteY="115dp"
            tools:layout_editor_absoluteX="17dp" />
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="0dp"
           card_view:layout_constraintLeft_toLeftOf="@+id/guideline10"
            card_view:layout_constraintRight_toRightOf="@+id/guideline20"
            card_view:layout_constraintTop_toTopOf="@+id/guideline13"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline19"
            android:text="28/08/17"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp" />

        <TextView
            android:id="@+id/tvWeekDay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="#000000"
            card_view:layout_constraintLeft_toLeftOf="@+id/guideline21"
            card_view:layout_constraintRight_toRightOf="@+id/guideline12"
            card_view:layout_constraintTop_toTopOf="@+id/guideline13"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline19"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="Friday"
            android:gravity="center"
            android:layout_marginLeft="0dp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            card_view:layout_constraintLeft_toLeftOf="@+id/guideline10"
            card_view:layout_constraintRight_toRightOf="@+id/guideline12"
            card_view:layout_constraintTop_toTopOf="@+id/guideline16"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline14"
            android:layout_gravity="center_vertical"
            android:padding="15dp"
            android:text="Title"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="#000000"
            tools:layout_editor_absoluteY="68dp"
            tools:layout_editor_absoluteX="8dp" />



    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>