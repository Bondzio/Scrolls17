<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.silive.scrolls.Fragments.UploadDoc"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="8dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Scrolls Id"
        android:layout_gravity="center"
        android:padding="2dp"
        android:textSize="20sp"
        android:id="@+id/login_username"
        android:layout_above="@+id/user_login"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Login"
        android:id="@+id/user_login"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_above="@+id/user_register"
        android:layout_alignLeft="@+id/user_register"
        android:layout_alignStart="@+id/user_register" />
    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Register"
        android:textSize="20sp"
        android:padding="3dp"
        android:id="@+id/user_register"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/upload"
        android:padding="3dp"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload a doc"
            android:padding="3dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:id="@+id/upload_doc"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="3dp"/>


    </LinearLayout>

</RelativeLayout>
