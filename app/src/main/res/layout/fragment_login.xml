<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline35"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline36"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline37"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="horizontal" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline38"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="horizontal" />
    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp"
        android:elevation="3dp"
        card_view:cardUseCompatPadding="true"
        android:hardwareAccelerated = "true"

        app:layout_constraintLeft_toLeftOf="@id/guideline35"
        app:layout_constraintRight_toLeftOf="@id/guideline36"
        app:layout_constraintTop_toTopOf="@id/guideline37"
        app:layout_constraintBottom_toTopOf="@id/guideline38">


        <LinearLayout
            android:id="@+id/llForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"

            android:layout_margin="18dp"
            android:visibility="visible">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Please login to upload a doc"
            android:textColor="#000000"
            android:textSize="15sp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/login_team_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:hint="Team Id"
            android:singleLine="true"

            android:textAppearance="@android:style/TextAppearance.Medium" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <Button
            android:id="@+id/user_login"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="5dp"
            android:text="Login"
            android:textAppearance="@android:style/TextAppearance.Small"  />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/user_register"
            android:layout_margin="5dp"
            android:text="Not registered yet"
            android:textColor="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/user_register"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="5dp"
            android:text="Register"
            android:textAppearance="@android:style/TextAppearance.Small"  />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>